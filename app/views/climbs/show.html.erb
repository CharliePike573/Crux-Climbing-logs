<p style="color: green"><%= notice %></p>

<div class="climbDetails">
  <p>
    <strong>Name:</strong>
    <%= @climb.name %>
  </p>

  <p>
    <strong>Grade:</strong>
    <%= @climb.grade_id %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= @climb.location %>
  </p>

  <p>
    <strong>Climb type:</strong>
    <%= @climb.climb_type %>
  </p>

  <p>
    <strong>Attempts:</strong>
    <%= @climb.attempts %>
  </p>

  <p>
    <strong>Comments:</strong>
    <%= @climb.comments %>
  </p>

</div>


<div>
  <%= link_to "Edit this climb", edit_climb_path(@climb) %> |
  <%= link_to "Back to climbs", climbs_path %>

  <%= button_to "Destroy this climb", @climb, method: :delete %>
</div>
